# Desktop Mode Configuration
# ==========================
# Copy this to .env when running in desktop mode

# Database - SQLite for local storage
DATABASE_TYPE=sqlite
SQLITE_PATH=./data/decisiongpt.db

# LLM Provider - Ollama for local inference
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI (optional fallback)
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Desktop mode flag
DESKTOP_MODE=true

# Feature flags
USE_VECTOR_MEMORY=false

# CORS - allow Tauri and localhost
CORS_ORIGINS=http://localhost:3000,tauri://localhost,http://127.0.0.1:3000
